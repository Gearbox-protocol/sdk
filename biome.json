{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "extends": ["@gearbox-protocol/biome-config"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!node_modules", "!dist", "!tmp", "!.yarn"],
    "ignoreUnknown": true
  },
  "linter": {
    "rules": {
      "correctness": {
        "useImportExtensions": {
          "level": "error",
          "options": {
            "forceJsExtensions": true
          }
        }
      }
    }
  }
}
