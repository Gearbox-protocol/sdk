{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": ["src", "scripts", "tsup.config.ts"],
  "exclude": ["dist", "node_modules"]
}
